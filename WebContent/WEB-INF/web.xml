<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Gims</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>insertddoc.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <description>Location to store uploaded file</description>
    <param-name>file-upload</param-name>
    <param-value>
         F:\softwares\SS\apache-tomcat-7.0.54\bin
     </param-value>
  </context-param>
  <servlet>
    <servlet-name>MonInsertDocServlet</servlet-name>
    <servlet-class>MonInsertDocServlet</servlet-class>
  </servlet>
   <!--  Login servlet  TODO:Rename later -->
  <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tracking.action.LoginServerlet</servlet-class>
        <!--List all the component's struts-config files-->
        <init-param>
            <param-name>config</param-name>
            <param-value>
              /WEB-INF/struts-config.xml              
            </param-value>
        </init-param>        
        <init-param>
          <param-name>ApplicationName</param-name>
          <param-value>SFTS</param-value>
        </init-param>
        <init-param>
          <param-name>ApplicationVersion</param-name>
          <param-value>1.0</param-value>
        </init-param>       
        <init-param>
          <param-name>ConnectionFactoryName</param-name>
          <param-value>java:/ConnectionFactory</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
  
  
  <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.tracking.action.UserServlet</servlet-class>
        <!--List all the component's struts-config files-->
        <init-param>
            <param-name>config</param-name>
            <param-value>
              /WEB-INF/struts-config.xml              
            </param-value>
        </init-param>        
        <init-param>
          <param-name>ApplicationName</param-name>
          <param-value>SFTS</param-value>
        </init-param>
        <init-param>
          <param-name>ApplicationVersion</param-name>
          <param-value>1.0</param-value>
        </init-param>       
        <init-param>
          <param-name>ConnectionFactoryName</param-name>
          <param-value>java:/ConnectionFactory</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
 <!--  servlet mapping start -->   
    
  <servlet-mapping>
    <servlet-name>MonInsertDocServlet</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  
  <!--  Login servlet mapping TODO:Rename later -->
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>